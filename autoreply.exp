#!/usr/bin/expect --always-readline -f
spawn cabal run chomegle $argv

expect "Connecting with likes $argv"
expect "Waiting..."

interact {
    "\x03" {
        send "\x03"
        exec kill -TERM $spawn_id
        close
    }
    "hi\r" {
        send "Hello, my name is Dan.\r"
    }
}

expect_background {
    "asl\n" {
        send -- "I'm 29, Dan from England.\n"
    }
}